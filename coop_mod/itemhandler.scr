	group.velocity[0] 	= (group.velocity[0] * 0.5) + randomint(50)
	group.velocity[1] 	= (group.velocity[1] * 0.5) + randomint(50)
	group.velocity[2] 	= (group.velocity[2] * 0.5) + 100
}end

