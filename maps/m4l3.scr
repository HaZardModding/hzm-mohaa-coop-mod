//=========================================================================
ending_spawner1:{
//=========================================================================
	if (self.timecheck == NIL){
		self.timecheck = level.time - 5
	}

	if (level.time > self.timecheck){
		if (level.flags[ending] == 0){
			self.timecheck = level.time + randomfloat(3)
			if (level.totalbaddies < 2){
				thread global/ai.scr::spawn 100
			}
		}
	}	
}end

//=========================================================================
