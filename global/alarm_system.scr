	if (self exec coop_mod/replace.scr::cansee 90 16000 == 0 && !(exec coop_mod/replace.scr::withinDistanceOf self level.backup_remove_distance)){ //chrissstrahl - coop
        goto alarm_system_backup_dude_gone
    }
	wait 1
}

if !(isalive self)
{
	//println "ALARM DUDE: " self " is dead"
	goto alarm_system_backup_dude_done
}

wait 3

goto alarm_system_backup_dude_loop

