alarm_system_backup_dude:

//println "ALARM DUDE: " self " setting movedone radius"
self.movedoneradius = 256
self forceactivate

//println "ALARM DUDE: " self " running to player"
//self exec global/runto.scr $player //chrissstrahl
self exec coop_mod/replace.scr::runtoClosest	//chrissstrahl - coop
self waittill movedone

self exec global/stand.scr

wait 5
