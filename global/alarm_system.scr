//[200] chrissstrahl - this makes sure we have the correct zone set
//in sp the value is directly read from player, we can't do taht for obviouse reasons in coop
//this checks every player and uses the zone the most players reside in
//============================================================================
maintainZoneTracking:{
//============================================================================
	if(level.gametype == 0){
		while(1){
			if($player){
				level.playerZone_index = $player.zone_index
			}
			waitframe
		}
		end
	}
	
	//[200] chrissstrahl - keep track of players in which zones they are and how many
	//level.playerZone_index //already set above
	while(1){
		//[200] chrissstrahl - reset zone player count
		for(local.i = 1;local.i <= $zone_trigger.size;local.i++){
			$world.flags["coop_alarm_system_player"+local.i+"Zone"] = 0
		}
		
		//[200] chrissstrahl - keep track of player count in zones
		for (local.i = 1;local.i <= $player.size;local.i++){
			local.player = $player[local.i]
			if(local.player != NULL && local.player.health > 0 && local.player.dmteam != "spectator" && local.player.flags["coop_isActive"] == 1){
				 if(local.player.zone_index != NIL){
					$world.flags["coop_alarm_system_player"+local.player.zone_index+"Zone"] += 1
				 }
			}
		}
		//[200] chrissstrahl - get zone with most players
		local.zoneWithMostPlayers = NIL
		local.zoneMostPlayersCount = NIL
		for(local.i = 1;local.i <= $zone_trigger.size;local.i++){
			local.currentZonePlayerCount = $world.flags["coop_alarm_system_player"+local.i+"Zone"]
			if(local.currentZonePlayerCount != NIL){
				if(local.zoneMostPlayersCount == NIL || local.currentZonePlayerCount > local.zoneMostPlayersCount ){
					local.zoneMostPlayersCount = local.currentZonePlayerCount
					local.zoneWithMostPlayers = local.i
				}
			}
		}
		//[200] chrissstrahl - not sure if we need to check for that
		//if(local.zoneWithMostPlayers != NIL){
		level.playerZone_index = local.zoneWithMostPlayers
		//}
		waitframe
	}
}end


