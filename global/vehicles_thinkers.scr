			local.turretmodel = NIL
			break
		case empty_tiger:
			local.model = models/vehicles/tigertank_destroyed_base.tik
			local.turretmodel = models/vehicles/tigertank_destroyed_cannon.tik
			local.get_out = 0
			local.do_collision = 0
			break;
