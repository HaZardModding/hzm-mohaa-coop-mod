//chrissstrahl - check if a player wants to enter the tank
//self is tank
//[200] Smithy - some minor optimisations:
// -removed redundant NULL check on each player
// -remove redundant team checks
//============================================================================
coop_selectDriverForTank:{
//============================================================================
	waitframe //wait for entities to be ready/spawned
	
	//but make sure the tank is not taken already
	while (level.coop_playerTank == NULL){
		//make sure that the tank has a cooldown time of a second or two, otherwise it will create bugs
		if ((level.coop_tankLastDriverTime + 2) < level.time){
			for (local.i = 1; local.i <= $player.size; local.i++){
				local.player =  $player[local.i]
				if (local.player.health > 0 && local.player.dmteam == "allies" && local.player.flags["coop_isActive"] == 1){
					if (local.player.useheld == 1 && vector_length(local.player.origin - $coop_tankOffset.origin) < 300 && level.time > level.coop_tankLastDriverTime){
						if (local.player.flags["coop_playerTankExitAt"] != NIL){
							if (level.time < int(local.player.flags["coop_playerTankExitAt"])){
								exec coop_mod/main.scr::printInfo local.player "You need to wait before you can drive the tank again!" 1
								continue
							}
						}
						self thread coop_setDriverForTank local.player
						end
					}
				}
			}
		}
		waitframe
	}
}end

//chrissstrahl - selects a player to drive the tank
//self is tank
//============================================================================
coop_setDriverForTank local.player:{
//============================================================================
	level.coop_tankLastDriverTime = (level.time + 10)
	level.coop_playerTank = local.player
	local.player takeall 	//[200] Smithy - stop weapon disappearing on exiting tank (can happen with sniper)
	self DetachDriverSlot 0 ( $coop_tankExit.origin + (0 0 150) )
	self lock 				//[200] Smithy - stop players being able to partly detach from tank and fire their weapons
	wait 0.2
	
	//[200] Smithy - minor optimisations (removed redundant if checks)
	if (isAlive local.player && local.player.flags["coop_isActive"] == 1 && local.player.dmteam == "allies"){
		self attachdriverslot 0 local.player
		local.player glue $coop_tankOffset
		local.player perferredweapon "88mm Tank Gun"
		local.player notsolid
		local.player nodamage
		local.player hide

		//monitor driver, see if he dies, changes team or just wants to leave tank by pressing use
		//[200] Smithy - minor optimisations (removed redundant if NULL check and while conditions)
		//also moved inside if
		while (isAlive local.player && local.player.flags["coop_isActive"] == 1 && local.player.dmteam == "allies"){
			//chrissstrahl - if player wants to exit the tank
			if(local.player.useheld == 1){
				if( level.time > level.coop_tankLastDriverTime ){
					break
				}else{
					exec coop_mod/main.scr::printInfo local.player "You need to wait before you can leave the tank again!" 1
				}
			}
			waitframe
		}
	}
	
	if(local.player){
		local.player.flags["coop_playerTankExitAt"] = ( level.time + 10 )
		local.player nodamage
		local.player origin ( $coop_tankExit.origin + (0 0 150) )
		waitframe
		if(local.player){
			local.player spectator //[200] Smithy - better than stufftexting
			local.player.flags["coop_playerTankExit"] = 1
		}
		waitframe
		if(local.player){
			local.player unglue			
			self DetachDriverSlot 0  ( $coop_tankExit.origin + (0 0 150) )
			local.player tele  ( $coop_tankExit.origin + (0 0 150) )
			local.player takedamage
			/* //[201] Smithy - buggy
			thread coop_mod/main.scr::skipTeamAndWeaponSelect local.player //[200] Smithy - forces player to allies and skips menus
			waitframe
			if(local.player){
				local.player useweaponclass level.coop_weaponUse //[200] Smithy - stop weapon disappearing on exiting tank (can happen with sniper)
			}
			*/
			//[203] chrissstrahl - make the player join the game again
			if(local.player){
				local.player thread coop_reJoinTankDriver
			}
		}
	}else{
		self DetachDriverSlot 0  ( $coop_tankExit.origin + (0 0 150) )
	}
	
	level.coop_tankLastDriverTime = level.time
	level.coop_playerTank = NULL
	
	wait 2
	self thread coop_selectDriverForTank
}end

