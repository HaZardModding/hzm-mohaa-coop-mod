truck_unload local.playerseek:

	local.driver = self.driver

	self waitthread UnloadPassengers local.playerseek

	if ( self.unloaddriverdelay != NIL ){
		wait self.unloaddriverdelay
	}
	else{
		wait 3
	}

	if (local.driver && isAlive local.driver && local.driver.driving != 0){
//		dprintln "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ unloading driver, local.driver is " local.driver
		local.driver nodamage
		self fullstop
		//self vehicleanim dooropen
		self moveanim dooropen
		self DetachDriverSlot 0 local.driver.origin
		local.driver notsolid
		local.driver physics_on
		if ( local.driver.usegun == NIL )
			local.driver gun "walter p38"
		else
			local.driver gun local.driver.usegun

		//chrissstrahl - compatibility to aa models/maps
		if(level.coop_aaMap == NIL || level.coop_aaMap != 1){
			local.driver anim_noclip 00A003_driverexit
			local.driver waittill animdone
		}
		
		local.driver solid
		local.driver exec global/enable_ai.scr
		local.driver exec global/setdeathanim.scr NIL
		local.driver health 75
		local.driver takedamage
		self.corona = 0
		local.driver.driving = 0
		local.driver.done_unloading = 1
	}
	else{ // fail safe condition, at least detach the driver to an arbitrary point near truck
		if ( isAlive local.driver ){
			// self DetachDriverSlot 0 (self.origin + (0 200 0))
			// doh!  delete the guy, not the whole truck !  self delete
			local.driver delete
		}
	}
	self.done_unloading = 1
end

//=========================================================================
truck_passenger_unload local.slot local.playerseek:{
//=========================================================================
	local.ent = self QueryPassengerSlotEntity local.slot
	if !(isAlive local.ent){ end }
	if (local.ent == NULL){ end }

	if ( local.ent.truckexitdelay != NIL ){
		wait local.ent.truckexitdelay
	}

	local.ent exec global/disable_ai.scr
	self DetachPassengerSlot local.slot local.ent.origin
	local.tag = ("passenger" + local.slot)
//	println "z:      local.tag: " local.tag
	local.ent.origin = self gettagposition local.tag
	local.ent.angles = self gettagangles local.tag
	local.ent notsolid
	local.ent physics_on
	local.ent anim_noclip ("opel_passenger" + local.slot)
	local.ent waittill animdone
	local.ent solid
	local.ent rendereffects "+shadow"
	local.ent leash 10000
	local.ent exec global/enable_ai.scr
	local.ent exec global/setdeathanim.scr NIL
	local.ent.done_unloading = 1
	
	// allow proning and crouching now...
	local.ent.ainoprone = 0
	local.ent.ainocrouch = 0

	if ( (local.playerseek != NIL) && (local.playerseek != 0) ){
		local.ent.nosurprise = 1
		local.ent exec coop_mod/replace.scr::runtoClosest //chrissstrahl - run bitch run - run to the closest player
	}
}end

